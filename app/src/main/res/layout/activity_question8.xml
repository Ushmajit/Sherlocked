    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.question8"
    android:background="@drawable/background1"
    android:id="@+id/eight">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/q8"
        android:id="@+id/textView7"
        android:layout_marginTop="60dp"
        android:textSize="45dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dosage"
        android:id="@+id/eight1"
        android:checked="false"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="before"
        android:id="@+id/eight2"
        android:checked="false"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignTop="@+id/eight1"
        android:layout_alignLeft="@+id/eight4"
        android:layout_alignStart="@+id/eight4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="volume"
        android:id="@+id/eight3"
        android:checked="false"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignTop="@+id/eight4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simple"
        android:id="@+id/eight4"
        android:checked="false"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/eight2"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>