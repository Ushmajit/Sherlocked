<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.question1"
    android:background="@drawable/background1"
    android:id="@+id/question1">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:id="@+id/one_a"
        android:checked="false"
        android:textSize="20dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/q1"
        android:id="@+id/q1"
        android:textSize="30dp"
        android:layout_marginTop="46dp"
        android:textStyle="normal|bold"
        android:fontFamily="snas-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/one_b"
        android:checked="false"
        android:textSize="20dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/one_a"
        android:layout_alignLeft="@+id/one_a"
        android:layout_alignStart="@+id/one_a" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/one_c"
        android:textSize="20dp"
        android:checked="false"
        android:layout_above="@+id/one_b"
        android:layout_alignRight="@+id/q1"
        android:layout_alignEnd="@+id/q1"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/one_d"
        android:textSize="20dp"
        android:checked="false"
        android:layout_alignTop="@+id/one_b"
        android:layout_alignLeft="@+id/one_c"
        android:layout_alignStart="@+id/one_c" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/next1"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>