<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.question11"
    android:background="@drawable/background1"
    android:id="@+id/eleven">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ques11"
        android:id="@+id/textView10"
        android:textStyle="normal|bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-condensed" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/eleven1"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:checked="false"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/eleven2"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/eleven1"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-condensed" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:id="@+id/eleven3"
        android:layout_below="@+id/eleven1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:checked="false"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/eleven4"
        android:checked="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/eleven3"
        android:layout_alignLeft="@+id/eleven2"
        android:layout_alignStart="@+id/eleven2"
        android:fontFamily="sans-serif-condensed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next11"
      android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>