<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.question3"
    android:background="@drawable/background1"
    android:id="@+id/any">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/q3"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12A - B"
            android:id="@+id/three6"
            android:checked="false"
            android:textSize="20dp"

            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/textView2"
            android:layout_toLeftOf="@+id/next3"
            android:layout_toStartOf="@+id/next3"
            android:layout_marginTop="52dp"
            />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5A + 5A "
        android:id="@+id/three1"
        android:checked="false"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/three6"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/next3"
        android:layout_toStartOf="@+id/next3"
        android:layout_marginTop="56dp"
     />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5A + 3B "
        android:id="@+id/three2"
        android:checked="false"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/three1"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/next3"
        android:layout_toStartOf="@+id/next3"
        android:layout_marginTop="60dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4C-2A-B"
        android:id="@+id/three3"
        android:checked="false"
        android:textSize="20dp"

        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/next3"
        android:layout_toEndOf="@+id/next3"
        android:layout_marginTop="52dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3B + 2C "
        android:id="@+id/three4"
        android:checked="false"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/three3"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/next3"
        android:layout_toEndOf="@+id/next3"
        android:layout_marginTop="56dp"  />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3C - 2A "
        android:id="@+id/three5"
        android:checked="false"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/three4"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/next3"
        android:layout_toEndOf="@+id/next3"
        android:layout_marginTop="60dp"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp" />





</RelativeLayout>
</ScrollView>