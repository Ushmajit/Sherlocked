<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.level2q10b"
    android:background="@drawable/level2back1"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView48"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:text="@string/level2q10b" />




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans10"
        android:hint="Enter your answer"
        android:layout_below="@id/textView48"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textColor="#ffffff"
        android:textColorHint="#ff9a9a9a"
        android:textStyle="italic" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level2q10b"
        android:layout_below="@id/ans10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:src="@drawable/home1"
        android:onClick="simple"/>

</RelativeLayout>
</ScrollView>