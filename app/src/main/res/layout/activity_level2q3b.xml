<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hk.ust.cse.com107x.sherlocked.level2q3b"
    android:background="@drawable/level2back1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/level2q3b"
        android:id="@+id/textView26"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans3"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:hint="Enter your answer"
        android:textColorHint="#ffa9a9a9"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level2q3b"
        android:src="@drawable/home1"
        android:layout_below="@+id/ans3"
        android:layout_margin="40dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:onClick="simple"
        />

</RelativeLayout>
</ScrollView>